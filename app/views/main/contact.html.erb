
<div class="main bg_dark">

    <div class="row-fluid">

        <div class="span12 no-padding">

            <div id="contact-form" class="span5">

                <%= form_tag(send_mail_path) do %>
    
                    <div class="form-group">
                        <%= label_tag 'name', 'Name' %>
                        <%= text_field_tag 'name', nil, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= label_tag 'email', 'Email' %>
                        <%= email_field_tag 'email', nil, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= label_tag 'service', 'Service' %>
                        <%= select_tag 'service', options_for_select(['Skype Book Club Visit', 'Reading at an Event', 'Signing Event', 'Interview Me About The Books']) %>
                    </div>
                    <div class="form-group">
                        <%= label_tag 'datepicker', 'Date' %>
                        <%= text_field_tag 'datepicker', nil, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= label_tag 'comments', 'Comments' %>
                        <%= text_area_tag 'comments', nil, class: 'form-control', rows: 5 %>
                    </div>
                    <div class="form-button">
                    <%= submit_tag nil, class: 'btn btn-default btn-about' %>
                    </div>

                <% end %>

            </div>

            <div id="contact-data" class="span6 bg_bright">

                <div class="span2"></div>

                <div class="span8">


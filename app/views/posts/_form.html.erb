  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    Categories<br>
    <%= f.collection_check_boxes(:category_ids, Category.order("name ASC"), :id, :name) do |box|%>
      <%=box.label do%>
         <%=box.check_box + box.text%>
      <%end%>
    <%end%>
  </div>

